<%- include("partials/header.ejs")%>
<%if(locals.add){%>
<form action="/submit" method="post">
    <input name="name" type="text" class="feedback-input" placeholder="name" />
    <input name="article" type="text" class="feedback-input"
        placeholder="write here, write now"></input>
    <input type="submit" value="SUBMIT" />
</form>
<%}%>
<%if(locals.editMode){%>
    <form action="/submit" method="post">
        <input name="name" type="text" class="feedback-input" value=<%=eName%> />
        <input name="article" type="text" class="feedback-input"
            value=<%=ePlace%>></input>
        <input value=<%=eID%> name="id" type="hidden">
        <input type="submit" value="SUBMIT" />
    </form>

<%}%>
<%if(locals.posts.length===0){%>
<h2>There are no posts yet 🥺</h2>
<%}else{for(let i=0;i<posts.length;i++){%>
    <form action="/exorcism" method="post">
        <h2><%=posts[i]["name"]%></h2>
        <p><%=posts[i]["article"]%></p>
        <p><%=posts[i]["timeStamp"]%></p>
        <input value=<%=i%> name="id" type="hidden">
        <input type="submit" name="submitButt"value="🗑️" />
        <input type="submit" name="submitButt"value="✍️" />
    </form>
    <%}}%>

    <%- include("partials/footer.ejs")%>